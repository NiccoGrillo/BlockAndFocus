{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BlockAndFocus",
  "version": "0.1.0",
  "identifier": "com.blockandfocus.app",
  "build": {
    "beforeBuildCommand": "cd ../ui && npm run build",
    "beforeDevCommand": "cd ../ui && npm run dev",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "BlockAndFocus",
        "width": 400,
        "height": 500,
        "resizable": true,
        "visible": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0"
    }
  }
}
